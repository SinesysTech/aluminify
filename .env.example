# ===========================================
# Aluminify - Variáveis de Ambiente
# ===========================================

# -------------------------------------------
# Core
# -------------------------------------------
NODE_ENV=development

# -------------------------------------------
# Supabase (Obrigatório)
# -------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_OR_ANON_KEY=your-publishable-key
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SECRET_KEY=your-secret-key

# -------------------------------------------
# Auth / OAuth (Required)
# -------------------------------------------
# Chave de criptografia para client_secret dos tenants (min 32 chars)
OAUTH_ENCRYPTION_KEY=your-encryption-key-here-min-32-chars

# -------------------------------------------
# Google Analytics (Opcional)
# -------------------------------------------
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# -------------------------------------------
# Sentry (Opcional - Build/Runtime)
# -------------------------------------------
SENTRY_AUTH_TOKEN=
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_TUNNEL_ROUTE=false

# -------------------------------------------
# Build & CI (Opcional)
# -------------------------------------------
DOCKER_BUILD=false
CI=false
